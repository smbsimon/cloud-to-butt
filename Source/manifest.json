{
  "manifest_version": 2,
  "name": "Creemee to Soft Serve",
  "description": "This extension changes instances of the word 'creemee' or 'creamee' to 'soft serve.'",
  "version": "1.0",

  "browser_action": {
    "default_icon": "soft-serve.png",
    "default_title": "De-Creemee Me"
  },

  "content_scripts":
  [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}
